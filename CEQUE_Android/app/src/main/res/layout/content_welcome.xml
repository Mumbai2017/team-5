<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.dhruvil.ceque_android.WelcomeActivity"
    tools:showIn="@layout/activity_welcome">

    <TextView
        android:id="@+id/text_view_welcome"
        android:layout_width="368dp"
        android:layout_height="76dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Welcome Dhruvil"
        android:textSize="35sp" />

    <RelativeLayout
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <TextView
            android:id="@+id/text_notif_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="170sp"
            android:text="0"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="30dp"
            android:text="Unread Notifications"
            android:textSize="25sp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/text_notif_number"
            android:layout_marginStart="14dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_months_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="170sp"
            android:text="8"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="10dp"
            android:text="Months Left"
            android:textSize="25sp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/text_months_number"
            android:layout_marginStart="14dp" />

    </RelativeLayout>

</LinearLayout>
